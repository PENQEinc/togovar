        %option{value: '13'} 13
        %option{value: '14'} 14
        %option{value: '15'} 15
        %option{value: '16'} 16
        %option{value: '17'} 17
        %option{value: '18'} 18
        %option{value: '19'} 19
        %option{value: '20'} 20
        %option{value: '21'} 21
        %option{value: '22'} 22
        %option{value: 'X'} X
        %option{value: 'Y'} Y
      \:
      %input#KariotypeInputRegionStart.input{placeholder: 'start', size: '14', type: 'text'}/
      \~
      %input#KariotypeInputRegionEnd.input{placeholder: 'end', size: '14', type: 'text'}/
  .content
    .chromosomes

#ActivityIndicator
#Configuration
  .bg
  .plate
    %h2.header Configuration
    .container
      %table
        %tbody
          %tr
            %th Reference genome
            %td
              #ConfReference.form-parts
                .togglebuttons
                  .button.-current GRCh37
                  .button GRCh38
          %tr
            %th Columns
            %td
              %ul#ConfSortColumns.group
          %tr
            %th Filters
            %td
              %ul#ConfSortFilters.group
          %tr
            %th Preview
            %td
              %ul#ConfSortPreviews.group
