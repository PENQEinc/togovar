.sidebar.sidebar-sticky
  .nav.nav-pills.flex-column
    .card.m-2
      .card-header
        Data set
      .card-body
        .form-check
          %input.form-check-input{type: 'checkbox', name: 'source_all', id: "source_all", value: 'source_all', checked: true}/
          %label.form-check-label{for: "source_all"} All
        %hr
        .form-check
        - %w[jga_ngs jga_snp tommo hgvd exac clinvar].each do |x|
          .form-check
            %input.form-check-input{type: 'checkbox', name: 'source', id: "source_#{x}", value: x, checked: true}/
            %label.form-check-label{for: "source_#{x}", data: { icon: "source_#{x}" }}
              = filter_label_for(x)
              %span{ id: "dataset_cnt_#{x}", class: 'text-muted' }

    .card.m-2
      .card-header
        Alternative allele frequency
      #freq_filter_wrapper
      .card-body
        %a#add_freq_filter{href: 'javascript:void(0)'}
          = fa_icon 'plus-circle'
          Add filter
      %input{ type: 'button', id: 'update_freq_filter', value: 'Update'}

    .card.m-2
      .card-header
        Variant type
      .card-body
        .form-check
          %input.form-check-input{type: 'checkbox', name: 'variant_type_all', id: "variant_type_all", value: 'variant_type_all', checked: true}/
          %label.form-check-label{for: "variant_type_all"} All
        %hr
        - %w[snv insertion deletion indel substitution].each do |x|
          .form-check
            %input.form-check-input{type: 'checkbox', name: 'variant_type', id: "variant_type_#{x}", value: x, checked: true}/
            %label.form-check-label{for: "variant_type_#{x}", data: { icon: "variant_type_#{x}" }}
              = filter_label_for(x)
              %span{ id: "variant_type_cnt_#{x}", class: 'text-muted' }

    .card.m-2
      .card-header
        Clinical significance
      .card-body
        .form-check
          %input.form-check-input{type: 'checkbox', name: 'significance_all', id: "significance_all", value: 'significance_all', checked: true}/
          %label.form-check-label{for: "significance_all"} All
        %hr
        .form-check
          %input.form-check-input{type: 'checkbox', name: 'significance', id: "significance_not_in_clinvar", value: 'not_in_clinvar', checked: true}/
          %label.form-check-label{for: "significance_not_in_clinvar"}
            Not in ClinVar
            %span{ id: "significance_cnt_not_in_clinvar", class: 'text-muted' }
        %hr
        :ruby
          significances = %w[pathogenic likely_pathogenic uncertain_significance likely_benign benign
                             conflicting_interpretations_of_pathogenicity drug_response association risk_factor
                             protective affects conflicting_data_from_submitters other not_provided]
        - significances.each do |x|
          .form-check
            %input.form-check-input{type: 'checkbox', name: 'significance', id: "significance_#{x}", value: x, checked: true}/
            %label.form-check-label{for: "significance_#{x}", data: { icon: "significance_#{x}" }}
              = filter_label_for(x)
              %span{ id: "significance_cnt_#{x}", class: 'text-muted' }
