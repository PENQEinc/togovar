= content_for :header do
  = stylesheet_link_tag 'reports/variation/show', media: :all
  = javascript_include_tag 'reports/variation/show'
  - @stanza.each do |stanza|
    = stanza.link

= content_for :javascript do
  = javascript_include_tag 'stanza'

.container-fluid
  #nav-wrapper
    #navbar.navbar
      .navbar-inner
        %ul.nav
          - @stanza.each do |stanza|
            %li= link_to stanza.nav_label, "##{stanza.nav_id}"

%main
  .container-fluid
    = render partial: 'layouts/report_header', locals: { id: "tgv#{@tgv_id}" }

    %section#nanostanzas
      %div
        - StanzaRuby.providers.variant.nanostanza.take(3).each do |stanza|
          .nanostanza-container{data: {stanza: stanza.uri, 'stanza_tgv_id': @tgv_id, nanostanza_span: stanza.span}}
      %div
        - StanzaRuby.providers.variant.nanostanza.drop(3).each do |stanza|
          .nanostanza-container{data: {stanza: stanza.uri, 'stanza_tgv_id': @tgv_id, nanostanza_span: stanza.span}}

    - @stanza.each do |stanza|
      %section{id: stanza.nav_id}
        .page-header
          %h2= stanza.title
        = stanza.tag
