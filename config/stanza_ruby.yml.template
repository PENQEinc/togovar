defaults: &defaults
  providers:
    genes:
      nanostanza:
        -
          uri: /ruby_stanza/gene_length_nano
          span: 1
        -
          uri: /ruby_stanza/protein_ec_number_nano
          span: 1
        -
          uri: /ruby_stanza/protein_3d_structure_nano
          span: 1
        -
          uri: /ruby_stanza/protein_references_timeline_nano
          span: 2

      togostanza:
        -
          uri: /ruby_stanza/protein_names
          name: Protein names
        -
          uri: /ruby_stanza/genome_jbrowse
          name: Genomic context
        -
          uri: /ruby_stanza/gene_attributes
          name: Gene attributes
        -
          uri: /ruby_stanza/nucleotide_sequence
          name: Nucleotide sequence
        -
          uri: /ruby_stanza/protein_attributes
          name: Protein attributes
        -
          uri: /ruby_stanza/protein_sequence
          name: Protein sequence
        -
          uri: /ruby_stanza/protein_general_annotation
          name: Protein general annotation
        -
          uri: /ruby_stanza/protein_ontologies
          name: Protein ontologies
        -
          uri: /ruby_stanza/protein_sequence_annotation
          name: Protein sequence annotation
        -
          uri: /ruby_stanza/protein_pfam_plot
          name: Pfam plot
        -
          uri: /ruby_stanza/protein_orthologs
          name: Protein orthologs
        -
          uri: /ruby_stanza/protein_references
          name: Protein references
        -
          uri: /ruby_stanza/protein_cross_references
          name: Protein cross references

development:
  <<: *defaults

test:
  <<: *defaults

production:
  <<: *defaults
