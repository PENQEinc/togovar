#!/usr/bin/env ruby

APP_PATH = File.expand_path('../config/application', __dir__)

require_relative '../config/boot'
require 'thor'

Dir[File.expand_path('./lib/tasks/**/*.thor')].each(&method(:load))

module TogoVar
  class CLI < Thor
    namespace :togovar

    register(Tasks::Convert, 'convert', 'convert [COMMAND]', 'convert tools')
    register(Tasks::Elasticsearch, 'elasticsearch', 'elasticsearch [COMMAND]', 'elasticsearch tools')
    register(Tasks::Virtuoso, 'virtuoso', 'virtuoso [COMMAND]', 'virtuoso tools')
  end
end

TogoVar::CLI.start
